<%= render 'nav_menu' %>


<h1>Detalhes da Máquina</h1>
<div class="lista">
      <ul class="list-group-ul">
      <li class="list-group-item"><strong>Nome:</strong> <%= @maquina.nome %></li>

      <li class="list-group-item"><strong>Criada por:</strong> <%= @maquina.user.email if @maquina.user %></li>

        <li class="list-group-item"><strong>Descrição:</strong> <%= @maquina.created_at_sao_paulo.strftime("%d/%m/%Y") %></li>
        <li class="list-group-item"><strong>Meses de garantia:</strong> <%= @maquina.meses_garantia %></li>
        <li class="list-group-item"><strong>Data de compra:</strong> <%= @maquina.data_compra.strftime("%d/%m/%Y") %></li>
        <li class="list-group-item"><strong>Quebrada:</strong> <%= @quebrada %></li>
      </ul>
</div>
<p><%= link_to 'Editar', edit_maquina_path(@maquina) , class: 'link-form'%></p>



